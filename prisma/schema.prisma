// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id                   String         @id
  name                 String
  email                String
  feet                 Int?
  inches               Int?
  weight               Float?
  age                  Int?
  gender               String?
  activity_level       String?
  goal_type            String[]       @default([])
  target_weight        Float?
  timeframe            Int?
  diet_type            String[]       @default([])
  allergies            String[]       @default([])
  custom_restrictions  String?
  onboarding_completed Boolean        @default(false)
  welcome_shown        Boolean        @default(false)
  MealPlan             MealPlan[]
  FavoriteMeal         FavoriteMeal[]
  clerkId              String         @unique
}

model MealPlan {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      String   @default("2025-01-01") // Date string in YYYY-MM-DD format for which day this plan is for
  createdAt DateTime @default(now())
  status    String   @default("active") // "active" or "historical"
  meals     Meal[]

  @@index([userId, date, status])
}

model Meal {
  id           String   @id @default(uuid())
  mealPlanId   String
  mealPlan     MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  type         String   // "breakfast", "lunch", "dinner", "snack"
  name         String
  ingredients  String[] @default([])
  preparation  String[] @default([])
  calories     Float
  protein      Float
  carbs        Float
  fat          Float
  reasoning    String?

  @@index([mealPlanId, type])
}

model FavoriteMeal {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  type        String   // "breakfast", "lunch", "dinner", "snack"
  ingredients String[] @default([])
  preparation String[] @default([])
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  reasoning   String?
  createdAt   DateTime @default(now())

  @@index([userId])
}
